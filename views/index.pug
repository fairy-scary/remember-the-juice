extends layout

append head
  //- add page specific styles by appending to the head
  link(rel="stylesheet" href="/stylesheets/login-signup.css")
  //- add page specific js
  script(src="/javascripts/index.js" type="module" defer)

block content
   div(class="authContainer")
      img(src="./images/logo-large.png" alt="Remember the Juice Logo" class="logoLarge")
      div(class="authForms")
          form(method="post" action="/")
          input(type="text" name="username" placeholder="USERNAME..." required)
          br
          input(type="password" name="passowrd" placeholder="PASSWORD..." required)
          br
          div(class="authFooter")
            button(class="loginButton" type="submit") Login
            h2 OR
            button(class="signUpButton" type="button" src="/signup") Sign Up
